<svg width="100%" height="100%" viewBox="0 0 1 1" preserveAspectRatio="none">
	<rect width="1" height="1" fill="@Color" onclick="@(async () => await OnClick.InvokeAsync(Lean))" stroke="black" stroke-width="@StrokeWidth" />
</svg>

@code {

	[Parameter()]
	public Lean? Lean { get; set; }

	[Parameter()]
	public EventCallback<Lean?> OnClick { get; set; }

	[Parameter()]
	public Lean? Selected { get; set; }

	private float StrokeWidth => (Selected == Lean && Selected != null) ? 0.05f : 0;


	private string Color
	{
		get
		{
			if (Lean == null)
			{
				return "#eeeeee";
			}

			return Lean.Value.GetColor();
		}
	}

}
